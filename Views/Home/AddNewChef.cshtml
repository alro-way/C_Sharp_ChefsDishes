@using System.ComponentModel.DataAnnotations;
@using C_Sharp_ChefsDishes.Models;


<div class="d-flex justify-content-center">
    @model Chef
    <form asp-action="AddChef" asp-controller="Home" method="post">
        <div class="form-group">
            <h4>Add a Chef!</h4>
        </div>
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input type="text" class="form-control" asp-for="FirstName">
            <span class="valid" asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name:</label>
            <input type="text" class="form-control" asp-for="LastName">
            <span class="valid" asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <label asp-for="BirthdayDate">Date of Birth:</label>
            <input type="date" class="form-control" asp-for="BirthdayDate">
            <span class="valid" asp-validation-for="BirthdayDate"></span>
        </div>
        <br>
        <button type="submit" class="btn btn-info">Add Chef</button>
        <br>
    </form>
</div>